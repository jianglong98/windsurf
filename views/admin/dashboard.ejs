<%- include('../partials/header') %>

<div class="row mb-4">
  <div class="col-md-12">
    <h1 class="mb-4">Admin Dashboard</h1>
    <p class="lead">Welcome to the admin dashboard. Manage bookings, services, and business hours.</p>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Today's Bookings</h5>
        <a href="/admin/bookings" class="btn btn-sm btn-outline-primary">View All Bookings</a>
      </div>
      <div class="card-body">
        <% if (todayBookings && todayBookings.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Time</th>
                  <th>Client</th>
                  <th>Service</th>
                  <th>Duration</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% todayBookings.forEach(booking => { %>
                  <tr>
                    <td>
                      <% 
                        const [hours, minutes] = booking.time.split(':');
                        const hour = parseInt(hours, 10);
                        const ampm = hour >= 12 ? 'PM' : 'AM';
                        const displayHour = hour % 12 || 12;
                      %>
                      <%= displayHour %>:<%= minutes %> <%= ampm %>
                    </td>
                    <td>
                      <%= booking.User.name %><br>
                      <small class="text-muted"><%= booking.User.email %></small>
                    </td>
                    <td><%= booking.Service.name %></td>
                    <td><%= booking.Service.duration %> min</td>
                    <td>
                      <span class="badge <%= booking.status === 'confirmed' ? 'bg-success' : booking.status === 'cancelled' ? 'bg-danger' : 'bg-warning' %>">
                        <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                      </span>
                    </td>
                    <td>
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                          Update
                        </button>
                        <ul class="dropdown-menu">
                          <li>
                            <form action="/admin/bookings/<%= booking.id %>/status" method="POST">
                              <input type="hidden" name="status" value="confirmed">
                              <button type="submit" class="dropdown-item">Confirm</button>
                            </form>
                          </li>
                          <li>
                            <form action="/admin/bookings/<%= booking.id %>/status" method="POST">
                              <input type="hidden" name="status" value="cancelled">
                              <button type="submit" class="dropdown-item">Cancel</button>
                            </form>
                          </li>
                        </ul>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="mb-0">No bookings scheduled for today.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Pending Bookings</h5>
      </div>
      <div class="card-body">
        <% if (pendingBookings && pendingBookings.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Time</th>
                  <th>Client</th>
                  <th>Service</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% pendingBookings.forEach(booking => { %>
                  <tr>
                    <td>
                      <% 
                        const date = new Date(booking.date);
                        const options = { weekday: 'short', month: 'short', day: 'numeric' };
                        const formattedDate = date.toLocaleDateString('en-US', options);
                      %>
                      <%= formattedDate %>
                    </td>
                    <td>
                      <% 
                        const [hours, minutes] = booking.time.split(':');
                        const hour = parseInt(hours, 10);
                        const ampm = hour >= 12 ? 'PM' : 'AM';
                        const displayHour = hour % 12 || 12;
                      %>
                      <%= displayHour %>:<%= minutes %> <%= ampm %>
                    </td>
                    <td>
                      <%= booking.User.name %><br>
                      <small class="text-muted"><%= booking.User.email %></small>
                    </td>
                    <td><%= booking.Service.name %> (<%= booking.Service.duration %> min)</td>
                    <td>
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                          Update
                        </button>
                        <ul class="dropdown-menu">
                          <li>
                            <form action="/admin/bookings/<%= booking.id %>/status" method="POST">
                              <input type="hidden" name="status" value="confirmed">
                              <button type="submit" class="dropdown-item">Confirm</button>
                            </form>
                          </li>
                          <li>
                            <form action="/admin/bookings/<%= booking.id %>/status" method="POST">
                              <input type="hidden" name="status" value="cancelled">
                              <button type="submit" class="dropdown-item">Cancel</button>
                            </form>
                          </li>
                        </ul>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="mb-0">No pending bookings.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Quick Links</h5>
      </div>
      <div class="card-body">
        <div class="list-group">
          <a href="/admin/services" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Manage Services
            <span class="badge bg-primary rounded-pill">
              <i class="bi bi-arrow-right"></i>
            </span>
          </a>
          <a href="/admin/business-hours" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            Business Hours
            <span class="badge bg-primary rounded-pill">
              <i class="bi bi-arrow-right"></i>
            </span>
          </a>
          <a href="/admin/bookings" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            All Bookings
            <span class="badge bg-primary rounded-pill">
              <i class="bi bi-arrow-right"></i>
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-6 mb-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">System Information</h5>
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Server Time
            <span id="serverTime"></span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Admin User
            <span><%= user.name %></span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Admin Email
            <span><%= user.email %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  // Update server time
  function updateServerTime() {
    const now = new Date();
    const options = { 
      weekday: 'long', 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit'
    };
    document.getElementById('serverTime').textContent = now.toLocaleDateString('en-US', options);
  }
  
  updateServerTime();
  setInterval(updateServerTime, 1000);
</script>

<%- include('../partials/footer') %>
