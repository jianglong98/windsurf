<%- include('partials/header') %>

<div class="hero text-center">
  <div class="container">
    <h1 class="display-4">Welcome to <%= businessName %></h1>
    <p class="lead">Experience relaxation and rejuvenation with our professional massage therapy services.</p>
    <a href="/booking" class="btn btn-primary btn-lg btn-book-now">Book Your Appointment</a>
  </div>
</div>

<div class="container">
  <div class="row mb-4">
    <div class="col-md-12">
      <h2 class="text-center mb-3">Our Services</h2>
      <p class="text-center mb-4">Choose from our range of professional massage services designed to meet your wellness needs.</p>
    </div>
  </div>

  <div class="row g-4">
    <% if (services && services.length > 0) { %>
      <% services.forEach(service => { %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card service-card h-100 shadow-sm">
            <% if (service.imageUrl) { %>
              <img src="<%= service.imageUrl %>" class="card-img-top" alt="<%= service.name %>" loading="lazy">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= service.name %></h5>
              <div class="d-flex justify-content-between mb-3">
                <span class="duration"><i class="bi bi-clock"></i> <%= service.duration %> minutes</span>
                <span class="price fw-bold">$<%= service.price %></span>
              </div>
              <p class="card-text"><%= service.description %></p>
              <div class="d-grid mt-auto">
                <a href="/booking?service=<%= service.id %>" class="btn btn-outline-primary">Book This Service</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <div class="alert alert-info">
          <p class="mb-0">No services available at the moment. Please check back later.</p>
        </div>
      </div>
    <% } %>
  </div>

  <div class="row mt-5 mb-4">
    <div class="col-md-12">
      <h2 class="text-center mb-3">Why Choose Us?</h2>
      <p class="text-center mb-4">We're dedicated to providing you with the best massage experience possible.</p>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center">
          <div class="mb-3">
            <i class="bi bi-award text-primary" style="font-size: 2.5rem;"></i>
          </div>
          <h5 class="card-title">Experienced Therapists</h5>
          <p class="card-text">Our team of licensed massage therapists have years of experience and specialized training.</p>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center">
          <div class="mb-3">
            <i class="bi bi-heart text-primary" style="font-size: 2.5rem;"></i>
          </div>
          <h5 class="card-title">Personalized Care</h5>
          <p class="card-text">We tailor each massage session to your specific needs and preferences for maximum benefit.</p>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body text-center">
          <div class="mb-3">
            <i class="bi bi-gem text-primary" style="font-size: 2.5rem;"></i>
          </div>
          <h5 class="card-title">Premium Facilities</h5>
          <p class="card-text">Our clean, comfortable, and tranquil environment enhances your relaxation experience.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4 mb-5">
    <div class="col-md-12 text-center">
      <a href="/booking" class="btn btn-primary btn-lg">Book Your Appointment Today</a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
